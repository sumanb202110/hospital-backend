          },
          "email": {
            "type": "string",
            "example": "gupta@gt.com"
          },
          "description": {
            "type": "string",
            "example": "dr"
          },
          "location": {
            "type": "string",
            "example": "bhubaneswar"
          },
          "education": {
            "type": "string",
            "example": "M.B.B.S"
          },
          "phone": {
            "type": "string",
            "pattern": "((\\+*)((0[ -]*)*|((91 )*))((\\d{12})+|(\\d{10})+))|\\d{5}([- ]*)\\d{6}",
            "example": 9999584975
